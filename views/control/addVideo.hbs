<div class="container">
    <div class="row justify-content-center mb-5 mt-5">
        <div class="col-12">
            <h3 class="text-center mb-3">Добавление видео</h3>
        </div>
        {{#if addSuccess}}
            <div class="col-7">
                <div class="alert alert-success text-center">{{addSuccess}}</div>
            </div>
        {{/if}}
        <div class="col-lg-6 col-12">
            <form action="/control/add-video" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="videoUrl">Ссылка на видео из YouTube</label>
                    <input name="videoUrl" type="text" id="videoUrl" class="form-control">
                </div>
                <div class="form-group">
                    <label for="videoSelect">Выберите товар</label>
                    <select name="videoSelect" id="videoSelect" class="form-control">
                        {{#if products}}
                            <option value="" selected disabled>Выберите товар</option>
                            <option value="">Для товара не нужно</option>
                            {{#each products}}
                                <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        {{else}}
                            <option value="" selected disabled>Товары отсутствуют</option>
                        {{/if}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="videoServiceSelect">Выберите услугу</label>
                    <select name="videoServiceSelect" id="videoServiceSelect" class="form-control">
                        {{#if services}}
                            <option value="" selected disabled>Выберите услугу</option>
                            <option value="">Для услуги не нужно</option>
                            {{#each services}}
                                <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        {{else}}
                            <option value="" selected disabled>Услуги отсутствуют</option>
                        {{/if}}
                    </select>
                </div>
                <div class="form-group mt-3 d-sm-block d-flex justify-content-center">
                    <button type="submit" class="divide-button">Добавить</button>
                </div>
            </form>
        </div>
    </div>
</div>