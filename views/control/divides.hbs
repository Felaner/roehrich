<div class="container divides">
    <h2 class="text-center mt-3">Редактирование категорий</h2>
    {{#if deleteSuccess}}
        <div class="row justify-content-center">
            <div class="col-7">
                <div class="alert alert-success text-center">{{deleteSuccess}}</div>
            </div>
        </div>
    {{/if}}
    {{#if divides}}
        <div class="row">
            {{#each divides}}
                <div class="col-md-4 col-12 mt-4">
                    <div class="product-card d-flex flex-column align-items-center justify-content-around mx-auto">
                        <div class="productions-title f-36 text-center">{{name}}</div>
                        <div class="product-img mb-3"><img class="" src="../{{srcImage}}" alt="product-img"></div>
                        <a href="/control/edit-divide/{{id}}" class="productions-button text-center mb-2">Редактировать</a>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <h3 class="text-center mt-3 mb-3">Категории отсутсвуют</h3>
        <a class="divide-link" href="/control/add-divide">
            <div class="divide-button text-center mx-auto">
                Добавить категорию
            </div>
        </a>
    {{/if}}
</div>