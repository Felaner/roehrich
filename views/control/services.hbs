<div class="container services">
    <h2 class="text-center mt-3">Редактирование услуг</h2>
    {{#if deleteSuccess}}
        <div class="row justify-content-center">
            <div class="col-7">
                <div class="alert alert-success text-center">{{deleteSuccess}}</div>
            </div>
        </div>
    {{/if}}
    {{#if service}}
        <div class="row">
            {{#each service}}
                <div class="col-lg-4">
                    <div class="card d-flex align-items-center mx-auto">
                        <img class="img-fluid h-100" src="/{{Images.[0].srcImage}}" alt="card-img">
                        <div class="service f-24 text-center">{{name}}
                            <a href="/control/edit-service/{{id}}" class="service-button text-center">Редактировать</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <h3 class="text-center mt-3 mb-3">Услуги отсутствуют</h3>
        <a class="divide-link" href="/control/add-service">
            <div class="divide-button text-center mx-auto">
                Добавить услугу
            </div>
        </a>
    {{/if}}
</div>